<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    @{
        BusinessManagement.User us = new BusinessManagement.User(User.Identity.Name);
        string css = Url.Content(us.GetCSSPath());
     }
    <link rel="stylesheet" type="text/css" href="@css">
</head>
<body>
    <div id="header">
        @{
            string urlSearch = Url.Content("~/Search/Search");
            }
        <form action="@urlSearch" method="get">
            <input type="text" name="search" />
            <select name="type">
                <option> Utilisateur </option>
                <option> Theme </option>
                <option> Tag </option>
            </select>
            <input type="submit" value="Submit" />
        </form>
    </div>
    <img id="logo" src="../Content/images/logo.png" alt="logo"/>
    <ul id="navigation">
        <li><a href="Profile">Profil</a></li>
        <li><a href="Blog">Blog</a></li>
        <li><a href="Follows">Follows</a></li>
        <li><a href="Followers?id=@us.getId()">Followers</a></li>
    </ul>
    <div id="content">
        @RenderBody()
    </div>
    <div id="footer">
         @{
            string home = Url.Content("~");
         }
        <ul>
            <li><a href="#">Contact</a></li>
            <li><a href="@home">Home</a></li>
            <li id="last"><a href="#">Credits</a></li>
        </ul>
    </div>
</body>
</html>
