<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    @{
        BusinessManagement.User us = new BusinessManagement.User(User.Identity.Name);
        string css = Url.Content(us.GetCSSPath());
     }
    <link rel="stylesheet" type="text/css" href="@css">
</head>
<body>
    <img id="logo" src="../Content/images/logo.png" alt="logo"/>
    <ul id="navigation">
        <li><a href="Profile">Profil</a></li>
        <li><a href="Blog">Blog</a></li>
        <li><a href="Follows">Follows</a></li>
        <li><a href="Followers?id=@us.getId()">Followers</a></li>
    </ul>
    <div id="content">
        @RenderBody()
    </div>
    <div id="footer">
        <ul>
            <li><a href="#">Contact</a></li>
            <li><a href="#">Website</a></li>
            <li id="last"><a href="#">Credits</a></li>
        </ul>
    </div>
</body>
</html>
