@model UserInterface.Models.ArticleModel

@{
    ViewBag.Title = "CreateArticle";
    Layout = "~/Views/User/_UserLayout.cshtml";
}

<h2>CreateArticle</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>ArticleModel</legend>
            @Html.HiddenFor(m => m.BlogId, new { Value = @ViewBag.BlogId })


        <div class="editor-label">
            @Html.LabelFor(model => model.MediaUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MediaUrl)
            @Html.ValidationMessageFor(model => model.MediaUrl)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MediaType)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.MediaType, new SelectList(BusinessManagement.DropDownLists.getMediaStyles(), "Id", "Description"))
            @Html.ValidationMessageFor(model => model.MediaType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Caption)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Caption)
            @Html.ValidationMessageFor(model => model.Caption)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
